import serial
import time

# Prompt the user to enter the COM port number
port_num = input("Enter the COM port number: ")

# Open the serial connection
ser = serial.Serial(f"COM{port_num}", baudrate=115200, timeout=1)

# Wait for the ESP32 to initialize
time.sleep(2)

# Send a command to the ESP32
ser.write(b'Hello ESP32!\n')

# Read and print the response
response = ser.readline().decode('utf-8')
print(f'Response from ESP32: {response}')

# Close the serial connection
ser.close()
